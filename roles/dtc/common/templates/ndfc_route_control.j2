{# Loop though policies name for each group #}
{% for policy_types in group_item %}
!!! {{ policy_types }}

    {% if "route_maps" in policy_types %}
        {% include 'ndfc_route_map.j2' %}
    {% endif %}
    {% if ("ipv4_prefix_lists" in policy_types or "ipv6_prefix_lists" in policy_types ) %}
        {% include 'ndfc_prefix_list.j2' %}
    {% endif %}
    {% if ( "ipv4_access_lists" in policy_types or "ipv6_access_lists" in policy_types )  %}
        {% include 'ndfc_ip_access_list.j2' %}
        {% endif %}
    {% if "mac_list" in policy_types %}
        {% include 'ndfc_mac_list.j2' %}
    {% endif %}
    {% if "time_range" in policy_types %}
        {% include 'ndfc_time_range.j2' %}
    {% endif %}
{% endfor %}